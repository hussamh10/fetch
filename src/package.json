{
  "name": "fetch",
  "version": "1.0.0",
  "description": "Fetch",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "del-cli build",
    "copy": "copyfiles app/**/* *.js finder/*.py assets/**/* package.json build",
    "py-build:main": "pyinstaller finder/main.py --distpath . -F",
    "py-build:index": "pyinstaller finder/index.py --distpath . -F",
    "electron-build": "electron-packager . --ignore='spec|build|finder|assets/icons' --icon=assets/icons/fetch --executableName=Fetch --asar",
    "package-install": "npm install",
    "build": "npm-run-all clean copy && cd build && npm-run-all py-build:main py-build:index package-install electron-build"
  },
  "author": "Muhammad Haroon",
  "license": "ISC",
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "del-cli": "^3.0.0",
    "electron": "^8.0.0",
    "electron-packager": "^14.2.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "angular": "^1.7.9"
  }
}
