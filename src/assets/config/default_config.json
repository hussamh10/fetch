{
  "theme":{
     "desc":"Theme",
     "type":"select",
     "default":"default-light",
     "options":[
        "default-light",
        "default-dark"
     ]
  },
  "launchOnStartup":{
     "desc": "Launch on startup",
     "type":"toggle",
     "default":true
  },
  "launchKey":{
     "desc":"Launch key",
     "type":"string",
     "default":"Ctrl+Space"
  },
  "indexerDuration":{
     "desc":"Update index after (minutes)",
     "type":"string",
     "default":"60"
  },
  "indexPaths":{
     "desc":"Directories to index",
     "type":"array",
     "default":[

     ]
  },
  "exclusions":{
     "desc":"Exclusions",
     "type":"array",
     "default":[
        "\\.",
        "lib",
        "bin",
        "envs",
        "include",
        "pkgs",
        "build",
        "sdk",
        "appdata",
        "notmnist_large",
        "notmnist_small",
        "RTTTL",
        "node_modules",
        "__pycache__"
     ]
  }
}